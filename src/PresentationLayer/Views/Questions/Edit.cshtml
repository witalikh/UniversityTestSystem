@using DataAccessLayer.Enums
@model BusinessLayer.ViewModels.QuestionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>QuestionEntity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="InnerOrder" class="control-label"></label>
                <input asp-for="InnerOrder" class="form-control" />
                <span asp-validation-for="InnerOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="@Html.GetEnumSelectList<QuestionType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marks" class="control-label"></label>
                <input asp-for="Marks" class="form-control" />
                <span asp-validation-for="Marks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectNumber" class="control-label"></label>
                <input asp-for="CorrectNumber" class="form-control" />
                <span asp-validation-for="CorrectNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectShortText" class="control-label"></label>
                <input asp-for="CorrectShortText" class="form-control" />
                <span asp-validation-for="CorrectShortText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route="tests-questions-index-by-classroom" asp-route-classroomPk="@ViewBag.ClassroomId" asp-route-testPk="@ViewBag.TestId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
